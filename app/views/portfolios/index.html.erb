<h1>Portfolio Items</h1>

<%# <a href="portfolios/new">Create New Item</a> %>
<%= link_to "Create New Item", new_portfolio_path %>

<% @portfolio_items.each do |item| %>
  <h2><%= link_to item.title, portfolio_path(item) %></h2>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <% if item.thumb_image %>
    <%= image_tag item.thumb_image %>
  <% end %>
  <%= link_to "Edit", edit_portfolio_path(item) %>
  <%= link_to "Delete", portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>


<% end %>
